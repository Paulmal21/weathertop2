<form class="ui stacked segment form" action="/station/{{station.id}}/addReading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <select name="code" id="code">
        <option value="100">100 Clear</option>
        <option value="200">200 Partial Clouds</option>
        <option value="300">300 Cloudy</option>
        <option value="400">400 Light Showers</option>
        <option value="500">500 Heavy Showers</option>
        <option value="600">600 Rain</option>
        <option value="700">700 Snow</option>
        <option value="800">800 Thunder</option>
      </select>

    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="Temperature" type="number" name="temp" step="any">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Wind Speed" type="number" name="windSpeed" step="any">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Wind Direction" type="number" name="windDirection" min="0" max="360" step="any">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="number" name="pressure">
    </div>

  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>