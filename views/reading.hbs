{{> menu}}

<form class="ui stacked segment form" action="/reading/{{station.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="Code" type="text" name="code" value="{{song.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="Temperature" type="text" name="temp" value="{{song.temp}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Wind Speed" type="text" name="windSpeed" value="{{song.windSpeed}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Wind Direction" type="text" name="windDirection" value="{{song.windDirection}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="text" name="pressure" value="{{song.pressure}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Reading</button>
</form>